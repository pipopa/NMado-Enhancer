 {
    "name": "N窓 Enhancer",
    "version": "1.1.0",
    "description": "N窓の機能強化を行います",
    "manifest_version": 2,
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "options_ui": {
      "page":"options/options.html",
      "open_in_tab": true
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "*://piporoid.net/NMado/*"
        ],
        "js":[
          "nmado_content_script.js"
        ]
      },
      {
        "all_frames": true,
        "matches": [
          "https://www.youtube.com/embed/*"
        ],
        "run_at":"document_end",
        "js":[
          "player_content_script.js"
        ]
      },
      {
        "all_frames": true,
        "matches": [
          "https://www.youtube.com/live_chat*"
        ],
        "run_at":"document_end",
        "js":[
          "chat_content_script.js"
        ]
      }
    ],
    "permissions": [
      "tabs",
      "storage",
      "notifications",
      "downloads"
    ],
    "web_accessible_resources": [
      "style/player.css",
      "style/chat.css"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
 }
